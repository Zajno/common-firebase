{
  "name": "@zajno/common-firebase",
  "version": "1.8.1",
  "description": "Zajno's re-usable Firebase utilities for JS/TS projects",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zajno/common-firebase.git"
  },
  "scripts": {
    "build": "tsc -P tsconfig.build.json",
    "build:clean": "rimraf ./lib && yarn build",
    "build:w": "yarn build --watch",
    "publish:local": "yalc push --replace --update",
    "postinstall": "yarn build",
    "prepare": "yarn build:clean && yarn lint && yarn test --clearCache && yarn test --silent",
    "lint": "eslint \"src/**/*.ts?(x)\"",
    "test": "jest"
  },
  "author": "Zajno",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@firebase/app-types": "^0.8.1",
    "@google-cloud/pubsub": "^3.2.1",
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.9",
    "@zajno/common": "^1.6.3",
    "@zajno/eslint-config": "^2.2.0",
    "eslint": "^8.27.0",
    "firebase": "^8.10.1",
    "firebase-admin": "^11.2.1",
    "firebase-functions": "^3.24.1",
    "firebase-functions-test": "^2.4.0",
    "jest": "^29.3.1",
    "mobx": "^6.6.2",
    "rimraf": "^3",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "tslint": "^6.1.3",
    "typescript": "^4.8.4"
  },
  "peerDependencies": {
    "@google-cloud/pubsub": "^3.2",
    "@zajno/common": "^1.6",
    "firebase": "^8.10",
    "firebase-admin": "^11",
    "firebase-functions": "^3",
    "mobx": "^6",
    "tslib": "^2.4",
    "typescript": "^4.8"
  },
  "files": [
    "src/*",
    "tsconfig.json",
    "tsconfig.build.json",
    "LICENSE",
    "!.DS_Store",
    "!**/__tests__/**/*"
  ],
  "publishConfig": {
    "access": "public"
  }
}
