{
  "name": "@zajno/common-firebase",
  "version": "1.7.1",
  "description": "Zajno's re-usable Firebase utilities for JS/TS projects",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zajno/common-firebase.git"
  },
  "scripts": {
    "build": "rimraf ./lib && tsc",
    "build:w": "yarn build --watch",
    "publish:local": "yalc push --replace --update",
    "postinstall": "yarn build",
    "prepare": "yarn build && yarn lint && yarn test --clearCache && yarn test --silent",
    "lint": "eslint \"src/**/*.ts?(x)\"",
    "test": "jest"
  },
  "author": "Zajno",
  "license": "MIT",
  "dependencies": {
    "rimraf": "^3"
  },
  "devDependencies": {
    "@google-cloud/pubsub": "^3.2.0",
    "@types/jest": "^29.0.3",
    "@types/node": "^16.11.59",
    "@zajno/common": "^1.6.2",
    "@zajno/eslint-config": "^2.1.0",
    "eslint": "^8.23.1",
    "firebase": "^8.10.1",
    "firebase-admin": "^9.12.0",
    "firebase-functions": "^3.23.0",
    "firebase-functions-test": "^2.4.0",
    "jest": "^29.0.3",
    "mobx": "^6.6.2",
    "ts-jest": "^29.0.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "tslint": "^6.1.3",
    "typescript": "^4.8.3"
  },
  "peerDependencies": {
    "@google-cloud/pubsub": "^3.2",
    "@zajno/common": "^1.6",
    "firebase": "^8.10",
    "firebase-admin": "^9",
    "firebase-functions": "^3.24",
    "mobx": "^6",
    "tslib": "^2.4",
    "typescript": "^4"
  },
  "files": [
    "src/*",
    "tsconfig.json",
    "!.DS_Store",
    "!**/__tests__/**/*"
  ],
  "publishConfig": {
    "access": "public"
  }
}
