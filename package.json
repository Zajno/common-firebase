{
  "name": "@zajno/common-firebase",
  "version": "1.4.3",
  "description": "Zajno's re-usable Firebase utilities for JS/TS projects",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zajno/common-firebase.git"
  },
  "scripts": {
    "build": "rm -rf ./lib && tsc",
    "build:w": "yarn build --watch",
    "publish:local": "yalc push --replace --update",
    "postinstall": "yarn build",
    "prepare": "yarn build && yarn lint && yarn test --clearCache && yarn test --silent",
    "lint": "eslint \"src/**/*.ts?(x)\"",
    "test": "jest"
  },
  "author": "Zajno",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/pubsub": "^2.16.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.14.0",
    "@zajno/common": "^1.1.6",
    "@zajno/eslint-config": "^1.1.2",
    "eslint": "^7.29.0",
    "firebase": "8.6.5",
    "firebase-admin": "^9.10.0",
    "firebase-functions": "^3.14.1",
    "firebase-functions-test": "^0.3.0",
    "jest": "^27.0.6",
    "mobx": "^6.3.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "tslib": "^2.3.0",
    "tslint": "^6.1.3",
    "typescript": "^4.2.3"
  },
  "peerDependencies": {
    "@zajno/common": "^1.1",
    "firebase": "^8.6",
    "firebase-admin": "^9.10",
    "firebase-functions": "^3.14",
    "mobx": "^6",
    "tslib": "^2.3",
    "typescript": "^4"
  },
  "files": [
    "src/*",
    "tsconfig.json",
    "!.DS_Store",
    "!**/__tests__/**/*"
  ],
  "publishConfig": {
    "access": "public"
  }
}
