{
  "name": "@zajno/common-firebase",
  "version": "1.2.12",
  "description": "Zajno's re-usable Firebase utilities for JS/TS projects",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zajno/common-firebase.git"
  },
  "scripts": {
    "build": "rm -rf ./lib && tsc",
    "build:w": "yarn build --watch",
    "publish:local": "yalc push --replace --update",
    "postinstall": "yarn build",
    "prepare": "yarn build && yarn lint && yarn test --clearCache && yarn test --silent",
    "lint": "eslint \"src/**/*.ts?(x)\"",
    "test": "jest"
  },
  "author": "Zajno",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.2",
    "@zajno/common": "^1.1.1",
    "@zajno/eslint-config": "^1.1.2",
    "eslint": "^7.26.0",
    "firebase": "^8.3.1",
    "firebase-admin": "^9.5.0",
    "firebase-functions": "^3.13.2",
    "firebase-functions-test": "^0.2.3",
    "jest": "^26.6.3",
    "mobx": "^6",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "tslib": "^2.1.0",
    "tslint": "^6.1.3",
    "typescript": "^4.2.3"
  },
  "peerDependencies": {
    "@zajno/common": "^1.1",
    "firebase": "^8.6",
    "firebase-admin": "^9.8",
    "firebase-functions": "^3.13",
    "mobx": "^6",
    "tslib": "^2.2",
    "typescript": "^4"
  },
  "files": [
    "src/*",
    "tsconfig.json",
    "!.DS_Store",
    "!**/__tests__/**/*"
  ],
  "publishConfig": {
    "access": "public"
  }
}
